# ================================
# DevSecOps Switchboard - env.example
# Copy to `.env.local` and edit values.
# ================================

# --- General ---
SEC_REPORT_DIR=./security-reports
ALLURE_REPORT_ROOT=./allure-report
GENERATE_ALLURE=true

# --- Allure (auto-downloads if not found) ---
ALLURE_VERSION=2.29.0

# --- Dependency-Check ---
NVD_API_KEY=replace_me
ODC_DATA_DIR=./.odc-cache
ODC_IMAGE=owasp/dependency-check:latest
ODC_ALLOW_UPDATE=auto
ODC_MAX_CACHE_AGE_DAYS=14

# --- Trivy ---
TRIVY_CACHE_DIR=~/.cache/trivy
TRIVY_IMAGE=aquasec/trivy:latest

# --- ZAP ---
ZAP_IMAGE=ghcr.io/zaproxy/zaproxy:stable
ZAP_BASELINE_TIME=10
ZAP_FULL_TIME=10
ZAP_POLICY=Default Policy
# Pipe-separated regex to exclude
ZAP_EXCLUDE_REGEX=^(/logout|/health)$
ZAP_USE_AJAX=false

# --- Semgrep ---
SEMGREP_IMAGE=semgrep/semgrep:latest
SEMGREP_CONFIGS=p/owasp-top-ten,p/nodejsscan
SEMGREP_EXCLUDES=node_modules,dist,build,coverage,.next,.git
SEMGREP_TIMEOUT=0

# --- Gitleaks ---
GITLEAKS_IMAGE=zricethezav/gitleaks:latest
GITLEAKS_MODE=dir
# Optional: path to a custom rules file
GITLEAKS_CONFIG=

# --- Sonar (optional) ---
SONAR_HOST_URL=
SONAR_PROJECT_KEY=
SONAR_TOKEN=
SONAR_USE_BRANCH=false
SONAR_EXCLUSIONS=

# --- Repo access tokens for private targets (optional) ---
# NEVER commit secrets. Keep these only in your local/CI secret store.
GITLAB_TOKEN=
GITHUB_TOKEN=

# --- ZAP Auth demo (optional; prefer CI secret vars) ---
ZAP_USER=
ZAP_PASS=
